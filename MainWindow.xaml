<Window x:Class="Pogoda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pogoda"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Synoptic Diafnose" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="Weather" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="Personal Desk" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Width="30" Height="30" HorizontalAlignment="Left" Margin="5"/>
                <TextBlock Grid.Column="1" Text="Weather info for current period" VerticalAlignment="Center"/>
                <StackPanel  Name="Detals_StackPanel" Grid.Row="1" Margin="5">
                    <Label Content="{Binding Path=Date}"/>
                    <Label Content="{Binding Path=WeekDay}"/>
                    <Label Content="{Binding Path=MaxTemperature}"/>
                    <Label Content="{Binding Path=MinTemperature}"/>
                    <Label Content="{Binding Path=Pressure}"/>
                    <Label Content="{Binding Path=WindSpeed}"/>
                    <Label Content="{Binding Path=WindDirection}"/>
                    <Label Content="{Binding Path=Wheather}"/>
                    <Label Content="{Binding Path=Location}"/>
                </StackPanel>
                <ListBox Name="WeatherHours_ListBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Path=Time}"/>
                                <Label Content="{Binding Path=Temperature}"/>
                                <Label Content="{Binding Path=ApparentTemperature}"/>
                                <Label Content="{Binding Path=RelativeHumidity}"/>
                                <Label Content="{Binding Path=SurfasePressure}"/>
                                <Label Content="{Binding Path=WindSpeed}"/>
                                <Label Content="{Binding Path=WindDirection}"/>
                                <Label Content="{Binding Path=Weather}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox Name="WeatherDays_ListBox" Grid.Row="2" Grid.ColumnSpan="2">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="5,0" Click="WeatherDayButton_Click">
                                <StackPanel>
                                    <Label Content="{Binding Path=Date}"/>
                                    <Label Content="{Binding Path=MaxTemperature}"/>
                                    <Label Content="{Binding Path=MinTemperature}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Margin="5,15" Content="Home"/>
                <Button Grid.Row="1" Margin="5,15" Content="Location"/>
                <Button Grid.Row="2" Margin="5,15" Content="Settings"/>
                <Button Grid.Row="3" Margin="5,15" Content="Clouse"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
